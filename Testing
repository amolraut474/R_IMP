<div class="container">
  <div class="image" id="image">
    <img src="your_image.jpg" alt="Image">
  </div>
  <div class="text" id="text">
    <p>Your text here</p>
  </div>
</div>


.container {
  display: flex;
  align-items: center;
}

.image,
.text {
  display: none;
}

.image img {
  width: 200px; /* Adjust size as needed */
}

.text p {
  margin: 0;
}

.container:hover .image,
.text:hover + .image {
  display: block;
}

.container:hover .text,
.image:hover + .text {
  display: block;
}
document.getElementById('image').addEventListener('mouseover', function() {
  document.getElementById('text').style.display = 'block';
});

document.getElementById('text').addEventListener('mouseover', function() {
  document.getElementById('image').style.display = 'block';
});



<div class="container">
  <div class="content" id="content">
    <div class="image">
      <img src="your_image.jpg" alt="Image">
    </div>
    <div class="text">
      <p>Your text here</p>
    </div>
  </div>
</div>



.container {
  position: relative;
  overflow: hidden;
}

.content {
  display: flex;
  transition: transform 0.3s ease;
}

.image,
.text {
  flex: 1;
}

.image img {
  width: 100%; /* Adjust size as needed */
}

.text p {
  margin: 0;
}

.container:hover #content {
  transform: translateX(-100%);
}



document.querySelector('.container').addEventListener('mouseover', function() {
  document.getElementById('content').style.transform = 'translateX(-100%)';
});

document.querySelector('.container').addEventListener('mouseout', function() {
  document.getElementById('content').style.transform = 'translateX(0)';
});





<div class="container">
  <div class="image" id="image">
    <img src="your_image.jpg" alt="Image" onmouseover="moveItems()">
  </div>
  <div class="text" id="text" onmouseover="moveItems()">
    <p>Your text here</p>
  </div>
</div>


.container {
  display: flex;
  align-items: center;
}

.image {
  flex: 1;
  transition: transform 0.5s ease;
}

.text {
  flex: 1;
  transition: transform 0.5s ease;
}

.container:hover #image {
  transform: translateX(100%);
}

.container:hover #text {
  transform: translateX(-100%);
}


function moveItems() {
  const image = document.getElementById('image');
  const text = document.getElementById('text');
  
  // Swap positions of image and text
  const temp = image.innerHTML;
  image.innerHTML = text.innerHTML;
  text.innerHTML = temp;
}

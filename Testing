.container {
  display: flex;
}

.content {
  display: flex;
}

.image {
  width: 200px; /* Adjust width as needed */
  transition: transform 0.5s ease; /* Transition for image */
}

.text {
  flex: 1;
  display: none;
}

.container:hover .image {
  order: 2;
  transform: translateX(-100%); /* Move image to text position */
}

.container:hover .text {
  display: block;
}


function moveImage() {
  const image = document.getElementById('image');
  const mainText = document.getElementById('mainText');
  const secondaryText = document.getElementById('secondaryText');
  
  // Toggle display of main and secondary text
  mainText.style.display = mainText.style.display === 'none' ? 'block' : 'none';
  secondaryText.style.display = secondaryText.style.display === 'none' ? 'block' : 'none';
}

.container:hover #mainText {
  order: 3;
}

.container:hover #secondaryText {
  order: 1;
}
<div class="container">
  <div class="content" onmouseover="moveImage()">
    <div class="image" id="image">
      <img src="your_image.jpg" alt="Image">
    </div>
    <div class="text main-text" id="mainText">
      <p>Main text here</p>
    </div>
    <div class="text secondary-text" id="secondaryText">
      <p>Secondary text here</p>
    </div>
  </div>
</div>
<div class="container" onmouseover="swapContent()">
  <div class="content">
    <div class="image" id="image">
      <img src="your_image.jpg" alt="Image">
      <div class="background-text" id="backgroundText">
        <p>Secondary text here</p>
      </div>
    </div>
    <div class="text main-text" id="mainText">
      <p>Main text here</p>
    </div>
  </div>
</div>


.container {
  display: flex;
}

.content {
  display: flex;
}

.image {
  position: relative;
}

.text {
  flex: 1;
}

.background-text {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  text-align: center;
  display: none;
}

.container:hover #image {
  order: 2;
}

.container:hover .text {
  order: 1;
}

.container:hover .background-text {
  display: block;
}


function swapContent() {
  const image = document.getElementById('image');
  const mainText = document.getElementById('mainText');
  const backgroundText = document.getElementById('backgroundText');
  
  // Swap positions of main text and background text
  const tempText = mainText.innerHTML;
  mainText.innerHTML = backgroundText.innerHTML;
  backgroundText.innerHTML = tempText;
}



<div class="container" onmouseover="moveImage()">
  <div class="content">
    <div class="image" id="image">
      <img src="your_image.jpg" alt="Image">
      <div class="background-text" id="backgroundText">
        <p>Secondary text here</p>
      </div>
    </div>
    <div class="text main-text" id="mainText">
      <p>Main text here</p>
    </div>
  </div>
</div>


.container {
  display: flex;
}

.content {
  display: flex;
}

.image {
  position: relative;
  transition: transform 0.5s ease;
}

.text {
  flex: 1;
}

.background-text {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  display: none;
}

.container:hover #image {
  transform: translateX(-100%);
}


function moveImage() {
  const image = document.getElementById('image');
  const backgroundText = document.getElementById('backgroundText');
  backgroundText.style.display = 'block';
}
